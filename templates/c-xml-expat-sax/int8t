[@lua --define int8_t type
	ctype_int8t = {
		type = 'c_type',
		c_type = {
			name = function() 
				return 'int8_t'
			end,
			definition = function() 
				return ''
			end,
			statement = function(varName) 
				return table.concat({
					'int8_t\tm_', varName, ';\n',
				})
			end,
		},
		delete = {
			definition = function() 
				return ''
			end,
			statement = function(obj) 
				return ''
			end,
		},
		buildVar = function(obj, member) 
			return table.concat({obj,'m_',member})
		end,
		binding = {
			marshall = {
				definition = function() 
					return table.concat({
						'void _marshall_int8t(xml_marshaller* pMarshaller, xml_cstr* pOutStr, const int8_t val) {\n',
						'\tchar valBuf[8];\n',
						'\tsnprintf(valBuf, sizeof(valBuf), "%hhd", val);\n',
						'\t_cstr_append(pMarshaller, pOutStr, valBuf);\n',
						'}\n',
					})
				end,
				statement = function(dst, obj)
					return table.concat({
						'_marshall_int8t(pMarshaller, ', dst, ', ', obj, ');\n',
					})
				end,
			},
			unmarshall = {
				definition = function() 
					return ''
				end,
				statement = function(src, obj)
					return table.concat({
						obj, ' = (int8_t)atoi(', src, ');\n',
					})
				end,
			},
		},
		test = {
			assign = function()
				return tostring(math.random(-127, 127))
			end,
			assert = function(obj1, obj2)
				return string.format("assert(%s == %s);\n", obj1, obj2)
			end
		},
	}
]