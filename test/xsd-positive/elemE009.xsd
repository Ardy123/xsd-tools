<?xml version="1.0"?>
<schema>
	<element  name="foo">
		<simpleType>
			<restriction base="string">
				<maxLength value="20"/>
			</restriction>
		</simpleType>
	</element>
	<element name="myElem" substitutionGroup="foo">
		<simpleType>
			<restriction base="string">
				<pattern value="[0-9]{,5}"/>
			</restriction>
		</simpleType>
	</element>
</schema>
